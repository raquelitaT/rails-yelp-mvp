<h1>Restaurants</h1>
<br>
<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li><strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong></li>
    <li><%= restaurant.address %></li>
    <li><%= restaurant.phone_number %></li>
    <li><%= restaurant.category %></li>
    <br>
  <% end %>
</ul>
<br>
<br>
<%= link_to "+ Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
